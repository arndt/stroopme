{
  "name": "stroopme-prototype",
  "version": "1.0.0",
  "description": "Sandbox for testing Blueprint code",
  "keywords": [],
  "main": "src/index",
  "repository": {
    "type": "git",
    "url": "arndt/stroopme"
  },
  "license": "AFL-2.0",
  "bugs": {
    "url": "https://github.com/arndt/stroopme/issues"
  },
  "homepage": "https://github.com/arndt/stroopme#readme",
  "bugs": {
    "url": "https://github.com/arndt/stroopme/issues"
  },
  "homepage": "https://github.com/arndt/stroopme#readme",
  "dependencies": {
    "@blueprintjs/core": "3.9.0",
    "@blueprintjs/datetime": "3.4.0",
    "@blueprintjs/icons": "3.3.0",
    "@blueprintjs/select": "latest",
    "@firebase/app": "0.3.8",
    "@firebase/database": "0.3.11",
    "@types/node": "^11.9.4",
    "firebase": "5.8.2",
    "firebase-app": "0.0.1",
    "left-pad": "^1.3.0",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-firebaseui": "3.1.2"
  },
  "devDependencies": {
    "react-scripts-ts": "^2.13.0",
    "@types/jest": "24.0.1",
    "@types/prop-types": "15.5.8",
    "@types/react": "16.8.1",
    "@types/react-dom": "16.8.1",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.1",
    "typescript": "^3.3.3",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "tslint": "5.12.1",
    "prettier": "1.15.3",
    "css-loader": "2.1.0",
    "file-loader": "3.0.1",
    "less-loader": "4.1.0",
    "html-webpack-plugin": "3.2.0",
    "image-loader": "0.0.1",
    "img-loader": "3.0.1",
    "url-loader": "1.1.2",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "compile": "tsc",
    "depcheck": "depcheck",
    "webpack": "webpack",
    "build": "npm run webpack",
    "build:watch": "webpack --watch --debug --output-pathinfo --progress",
    "start": "nodemon ./dist/server.js",
    "test": "jest -c jest.unit.js",
    "lint": "tslint --project .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "devDependencies": {
      "automerge": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "@types/"
        ],
        "automerge": true
      }
    ]
  },
  "resolutions": {
    "merge": ">=1.2.1",
    "@types/react": "16.8.1",
    "@types/prop-types": "15.5.8"
  }
}
